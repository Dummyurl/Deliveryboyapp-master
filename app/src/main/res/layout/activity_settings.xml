<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/my_gradient_back"
        android:orientation="horizontal"
        android:padding="40dp"
        android:weightSum="2">

        <!-- <com.ziffytech.util.RoundedImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_app_logo_round"
            android:adjustViewBounds="true"
            />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/dimen_2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mahesh Bhople"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="maheshbhople@gmail.com"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/btnpersonalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:padding="13dp"
            android:text="My Personal Details"
            android:textSize="14dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_stars_black_24dp"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            />

        <TextView
            android:id="@+id/btnMedicalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:padding="13dp"
            android:text="My Shedule Details"
            android:textSize="14dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_stars_black_24dp"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>


        <TextView
            android:id="@+id/btnLifeStyleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:padding="13dp"
            android:text="My Order Details"
            android:textSize="14dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_stars_black_24dp"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            />


        <TextView
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:padding="13dp"
            android:text="Update Mobile Number"
            android:textSize="14dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_stars_black_24dp"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"

            />


        <TextView
            android:id="@+id/btnlogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:padding="13dp"
            android:text="Logout"
            android:textSize="14dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_stars_black_24dp"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"

            />





    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Ziffytech Digital Healthcare PVT.LTD., Pune : 411028"
        android:layout_margin="1dp"
        android:textStyle="bold"
        android:textColor="@color/light_grey"
        android:id="@+id/textView"
        android:layout_gravity="center|bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Version : 1.0.0"
        android:layout_margin="1dp"
        android:textStyle="bold"
        android:textColor="@color/light_grey"
        android:id="@+id/textView1"
        android:layout_gravity="center|bottom"/>



</LinearLayout>