<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/my_gradient_back">

        <ImageView
            android:id="@+id/imgv_drawer"
            android:layout_weight="0.70"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrowback"/>

        <ImageView
            android:id="@+id/imgv_brandlogo"
            android:layout_weight="2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="5dp"
            android:src="@drawable/headtitle" />

        <ImageView
            android:id="@+id/imgv_search"
            android:layout_weight="0.50"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="invisible"/>


        <ImageView
            android:id="@+id/imgv_profile"
            android:layout_weight="0.50"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/imgv_refresh"
            android:layout_weight="0.50"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/refresh"/>


    </LinearLayout>

</LinearLayout>